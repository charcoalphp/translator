{
    "name": "locomotivemtl/charcoal-translator",
    "description": "Charcoal Translator and locales management.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu Ducharme",
            "email": "mat@locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "locomotivemtl/charcoal-config": "^0.8",
        "symfony/translation": "^3.2",
        "pimple/pimple": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "mockery/mockery": "^0.9",
        "squizlabs/php_codesniffer": "^3.0",
        "satooshi/php-coveralls": "^1.0",
        "locomotivemtl/charcoal-admin": "^0.8"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal"
        }
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs",
            "@phpunit"
        ],
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "php vendor/bin/phpcs -ps --colors src/ tests/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors src/ tests/",
        "phpunit": "php vendor/bin/phpunit --coverage-text"
    }
}
